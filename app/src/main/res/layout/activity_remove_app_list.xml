<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove_apps_header"
        android:layout_gravity="center"
        android:textSize="25sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_gravity="start"
        android:id="@+id/mount_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mount_system_elotte"
        android:gravity="center"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:onClick="_mountSystem" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/aosp_browser_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_browser"/>

            <Button
                android:id="@+id/aosp_email_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_email"/>

            <Button
                android:id="@+id/cm_filemanager_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_cm_filemanager"/>

            <Button
                android:id="@+id/aosp_messaging_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_messaging"/>

            <Button
                android:id="@+id/omniswitch_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_omniswitch"/>

            <Button
                android:id="@+id/aosp_soundrecorder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_soundrecorder"/>

            <Button
                android:id="@+id/torch_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_torch"/>

            <Button
                android:id="@+id/print_spooler_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_print_spooler"/>

            <Button
                android:id="@+id/aosp_calendar_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_calendar"/>

            <Button
                android:id="@+id/aosp_voice_dialer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_voice_dialer"/>

            <Button
                android:id="@+id/aosp_camera_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="_aosp_camera"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>